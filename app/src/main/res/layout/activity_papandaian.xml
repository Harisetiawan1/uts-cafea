<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Papandaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="244dp"
        android:id="@id/image"
        android:src="@drawable/papandayan"
        android:layout_weight="0.47" />

    <TextView
        android:text="Gunung papandaian adalah gunung api strato yang terletak di Kabupaten Garut, Jawa Barat tepatnya di Kecamatan Cisurupan. Gunung dengan ketinggian 2665 m diatas permukaan laut itu terletak sekitar 70 km sebelah tenggara Bandung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:elevation="0dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="casual" />
</LinearLayout>